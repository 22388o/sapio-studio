{
  "include": [
    "src",
    "desktop"
  ],
  "exclude": [
    "buiild",
    "public",
    "dist"
  ],
  "compilerOptions": {
    "incremental": true,
    "target": "ESNEXT",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
